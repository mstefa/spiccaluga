---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

interface Project {
  title: string;
  description: string;
  imageUrl: string;
  location: string;
  year: string;
  category: string;
}

const projects: Project[] = [
  {
    title: 'Casa Moderna',
    description:
      'Diseño residencial contemporáneo con énfasis en la luz natural y espacios abiertos',
    imageUrl: '/images/project1.png',
    location: 'Ciudad, País',
    year: '2023',
    category: 'Residencial',
  },
  {
    title: 'Edificio Comercial',
    description: 'Centro comercial con fachada dinámica y espacios flexibles',
    imageUrl: '/images/project2.png',
    location: 'Ciudad, País',
    year: '2022',
    category: 'Comercial',
  },
  {
    title: 'Villa Minimalista',
    description:
      'Residencia de lujo con diseño minimalista y materiales naturales',
    imageUrl: '/images/project3.png',
    location: 'Ciudad, País',
    year: '2023',
    category: 'Residencial',
  },
  {
    title: 'Oficinas Corporativas',
    description: 'Espacio de trabajo moderno con áreas colaborativas',
    imageUrl: '/images/project4.png',
    location: 'Ciudad, País',
    year: '2023',
    category: 'Comercial',
  },
];

const categories = ['Todos', 'Residencial', 'Comercial', 'Cultural'];
---

<Layout title="Proyectos">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <h1 class="text-4xl font-serif text-center mb-12">Nuestros Proyectos</h1>

    <!-- Filtros -->
    <div class="flex justify-center space-x-4 mb-12">
      {
        categories.map((category) => (
          <button class="px-6 py-2 rounded-full border border-gray-300 hover:border-gray-900 transition-colors duration-200">
            {category}
          </button>
        ))
      }
    </div>

    <!-- Grid de Proyectos -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => <ProjectCard {...project} />)}
    </div>
  </div>
</Layout>
