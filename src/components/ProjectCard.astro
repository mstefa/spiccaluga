---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  location: string;
  year: string;
}

const { title, description, imageUrl, location, year } = Astro.props;
---

<article class="group relative overflow-hidden bg-white">
  <div class="aspect-w-16 aspect-h-9">
    <img
      src={imageUrl}
      alt={title}
      class="object-cover w-full h-full transform transition-transform duration-500 group-hover:scale-105"
    />
  </div>
  <div
    class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
  >
    <div class="absolute inset-0 flex items-center justify-center p-6">
      <div class="text-white text-center">
        <h3 class="text-xl font-serif mb-2">{title}</h3>
        <p class="text-sm mb-2">{location}</p>
        <p class="text-sm mb-4">{year}</p>
        <p class="text-sm">{description}</p>
      </div>
    </div>
  </div>
</article>

